<Window x:Class="Fun_Dub_Tool_Box.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fun_Dub_Tool_Box"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        xmlns:controls="clr-namespace:ModernWpf.Controls;assembly=ModernWpf.Controls"
        Title="Fun Dub Tool Box" 
        Height="720" MinHeight="720" 
        Width="1200" MinWidth="1200"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">

    <Grid x:Name="MainGrid" Background="#FF1F1F1F">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Grid Grid.Column="0" Background="#FF1F1F1F">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#FF4D4D4D" Margin="0,0,10,0" BorderThickness="0,0,1,0" Grid.ColumnSpan="2" VerticalAlignment="Top">
                <TextBlock x:Name="MaterialsTextBlock" Text="Materials" FontSize="24" FontWeight="Bold" Foreground="#FFD0D0D0" Margin="0,0,0,0" HorizontalAlignment="Center" FontFamily="FiraSansBold"/>
            </Border>

            <StackPanel Grid.Column="0" Margin="0,40,0,0">
                <ToggleButton x:Name="AddIntroToggleButton" Margin="10" Padding="10" Background="#FF333333" FontFamily="Nunito Black" Foreground="White" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" HorizontalAlignment="Stretch" Height="60" Checked="AddIntroToggleButton_Checked">
                    <ToggleButton.ToolTip>
                        <ToolTip Content="Intro – clip that plays before main video" FontFamily="PTSansRegular" FontSize="14" />
                    </ToggleButton.ToolTip>
                    <Grid Width="Auto">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xe892;" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="IntroTextBlock" Text="INTRO" FontSize="25" HorizontalAlignment="Center" Margin="35,0,0,0" TextAlignment="Center"/>
                    </Grid>
                </ToggleButton>
                <ToggleButton x:Name="AddVideoToggleButton" Margin="10" Padding="10" Background="#FF333333"  FontFamily="Nunito Black"  Foreground="White" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" HorizontalAlignment="Stretch" Height="60">
                    <ToggleButton.ToolTip>
                        <ToolTip Content="Video - main video content" FontFamily="PTSansRegular" FontSize="14" />
                    </ToggleButton.ToolTip>
                    <Grid Width="Auto">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xe8b2;" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="VideoTextBlock" Text="VIDEO" FontSize="25" HorizontalAlignment="Center" Margin="35,0,0,0" TextAlignment="Center"/>
                    </Grid>
                </ToggleButton>
                <ToggleButton x:Name="AddLogoToggleButton"  Margin="10" Padding="10" Background="#FF333333"  FontFamily="Nunito Black"  Foreground="White" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" HorizontalAlignment="Stretch" Height="60">
                    <ToggleButton.ToolTip>
                        <ToolTip Content="Logo - logotype or watermark which overlay" FontFamily="PTSansRegular" FontSize="14" />
                    </ToggleButton.ToolTip>
                    <Grid Width="Auto">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xeb9f;" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="LogoTextBlock" Text="LOGO" FontSize="25" HorizontalAlignment="Center" Margin="35,0,0,0" TextAlignment="Center"/>
                    </Grid>
                </ToggleButton>
                <ToggleButton x:Name="AddSubtitlesToggleButton" Margin="10" Padding="10" Background="#FF333333"  FontFamily="Nunito Black"  Foreground="White" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" HorizontalAlignment="Stretch" Height="60">
                    <ToggleButton.ToolTip>
                        <ToolTip Content="Subtitle - subtitle file (.srt/.ass/.vtt)" FontFamily="PTSansRegular" FontSize="14" />
                    </ToggleButton.ToolTip>
                    <Grid Width="Auto">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xe7f0;" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="SubtitlesTextBlock" FontSize="25" HorizontalAlignment="Center" Margin="35,0,0,0" TextAlignment="Center" Text="SUBTITLES"/>
                    </Grid>
                </ToggleButton>
                <ToggleButton x:Name="AddAuidioToggleButton" Margin="10" Padding="10" Background="#FF333333"  FontFamily="Nunito Black"  Foreground="White" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" HorizontalAlignment="Stretch" Height="60">
                    <ToggleButton.ToolTip>
                        <ToolTip Content="Audio - audio file which will replace audoio of main video" FontFamily="PTSansRegular" FontSize="14" />
                    </ToggleButton.ToolTip>
                    <Grid Width="Auto">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xe995;" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="AudioTextBlock" Text="AUDIO" FontSize="25" HorizontalAlignment="Center" Margin="35,0,0,0" TextAlignment="Center"/>
                    </Grid>
                </ToggleButton>
                <ToggleButton x:Name="AddOutroToggleButton" Margin="10" Padding="10" Background="#FF333333"  FontFamily="Nunito Black"  Foreground="White" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" HorizontalAlignment="Stretch" Height="60">
                    <ToggleButton.ToolTip>
                        <ToolTip Content="Outro - clip that plays after main video" FontFamily="PTSansRegular" FontSize="14" />
                    </ToggleButton.ToolTip>
                    <Grid Width="Auto">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xe893;" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="OutroTextBlock" Text="OUTRO" FontSize="25" HorizontalAlignment="Center" Margin="35,0,0,0" TextAlignment="Center"/>
                    </Grid>
                </ToggleButton>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="0,40,0,0">
                <ToggleButton x:Name="SaveIntroToggleButton" Margin="0,10,10,10" Background="#FF333333" Foreground="White" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" Height="60" HorizontalAlignment="Stretch">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74E;" FontSize="30" />
                </ToggleButton>

                <ToggleButton Content="S" FontSize="25" Margin="10,10,10,10"  Background="#415E72" Foreground="White" BorderBrush="#7D8D86" HorizontalContentAlignment="Left" Visibility="Hidden" Height="60"/>

                <ToggleButton x:Name="SaveLogoToggleButton" Margin="0,10,10,10"  Background="#FF333333" Foreground="White" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" Height="60" HorizontalAlignment="Stretch">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74E;" FontSize="30" />
                </ToggleButton>

                <ToggleButton Content="S" FontSize="25" Margin="10" Background="#415E72" Foreground="White" BorderBrush="#7D8D86" HorizontalContentAlignment="Left" Visibility="Hidden" Height="60"/>
                <ToggleButton Content="S" FontSize="25" Margin="10" Background="#415E72" Foreground="White" BorderBrush="#7D8D86" HorizontalContentAlignment="Left" Visibility="Hidden" Height="60"/>

                <ToggleButton x:Name="SaveOutroToggleButton" Margin="0,10,10,10"  Background="#FF333333" Foreground="White" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" Height="60" HorizontalAlignment="Stretch">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74E;" FontSize="30" />
                </ToggleButton>

            </StackPanel>

            <ToggleButton x:Name="ToolsToggleButton"  Grid.ColumnSpan="2" FontSize="25" Margin="10,10,10,45" Padding="10" Background="#FF333333"  FontFamily="Nunito Black"  Foreground="White" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="60">
                <ToggleButton.ToolTip>
                    <ToolTip Content="Tools - Opens a window with additional tools for working with video, audio, and subtitles." FontFamily="PTSansRegular" FontSize="14" />
                </ToggleButton.ToolTip>
                <Grid Width="Auto">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xec7a;" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Left" />
                    <TextBlock x:Name="ToolsTextBlock" Text="TOOLS" FontSize="25" HorizontalAlignment="Center" Margin="35,0,0,0" TextAlignment="Center"/>
                </Grid>
            </ToggleButton>

            <Border Background="#FF4D4D4D" Margin="0,0,10,0" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Height="35">
                <Grid Grid.Column="0" VerticalAlignment="Bottom">
                    <Button x:Name="ClearProjectButton" BorderThickness="0" Background="#FF333333" Foreground="White" HorizontalAlignment="Left" BorderBrush="{x:Null}">
                        <Button.ToolTip>
                            <ToolTip Content="Logs / Clear cache" FontFamily="PTSansRegular" FontSize="14" />
                        </Button.ToolTip>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xe74d;" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Left" />
                    </Button>
                    <Button x:Name="SettingsButton" BorderThickness="0" Background="#FF333333" Foreground="White" HorizontalAlignment="Center" BorderBrush="{x:Null}" Click="SettingsButton_Click">
                        <Button.ToolTip>
                            <ToolTip Content="App Settings" FontFamily="PTSansRegular" FontSize="14" />
                        </Button.ToolTip>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xe713;" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Left" />
                    </Button>
                    <Button x:Name="AboutButton" BorderThickness="0"  Background="#FF333333" Foreground="White" HorizontalAlignment="Right" BorderBrush="{x:Null}" Click="AboutButton_Click">
                        <Button.ToolTip>
                            <ToolTip Content="About and Version Info" FontFamily="PTSansRegular" FontSize="14" />
                        </Button.ToolTip>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xe946;" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="0,1,0,0" />
                    </Button>
                </Grid>
            </Border>
        </Grid>


        <Grid Grid.Column="1" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="310"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>


                <Grid Grid.Row="0">
                    <Grid>
                        <Border Background="#FF4D4D4D" VerticalAlignment="Top" Grid.Row="0">
                            <TextBlock x:Name="MaterialsListTextBlock" Text="Materials List" FontSize="24" FontWeight="Bold" Foreground="#FFD0D0D0" FontFamily="FiraSansBold" Margin="0,0,0,0" HorizontalAlignment="Center" />
                        </Border>

                        <ListView x:Name="MaterialsListView" FontFamily="PTSansRegular" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}"  ItemsSource="{Binding MaterialsData}" Background="#FF333333" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="0,30,0,0" Foreground="White" AllowDrop="True" MouseDoubleClick="MaterialsListView_MouseDoubleClick" BorderThickness="0,0,0,2" BorderBrush="#FFD0D0D0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn x:Name="TypeHeader"  Header="Type" DisplayMemberBinding="{Binding MaterialType}"/>

                                    <GridViewColumn x:Name="FilePathHeader" Header="Path" DisplayMemberBinding="{Binding MaterialPath}"/>
                                    <GridViewColumn x:Name="DurationHeader" Header="Duration" DisplayMemberBinding="{Binding Duration}"/>
                                    <GridViewColumn x:Name="ResolutionHeader" Header="Resolution" DisplayMemberBinding="{Binding Resolution}"/>

                                    <GridViewColumn x:Name="DeleteHeader" Header="Delete">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button x:Name="DeleteMaterialButton" BorderThickness="0" Background="#FF333333"  HorizontalAlignment="Left" BorderBrush="{x:Null}" Click="DeleteMaterialButton_Click">
                                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xe74d;" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                                </Button>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Grid>

                <Grid Grid.Row ="1" Margin="0,10,0,10">
                    <Grid Grid.Row="0">
                        <Grid>
                            <Border Background="#FF4D4D4D" VerticalAlignment="Top" Grid.Row="0" Height="32">
                                <TextBlock x:Name="ProjectSettingsTextBlock" Text="Project Settings" FontSize="24" FontWeight="Bold" Foreground="#FFD0D0D0" FontFamily="FiraSansBold" Margin="0,0,0,0" HorizontalAlignment="Center" />
                            </Border>

                            <Grid Margin="0,30,0,0" Background="#FF333333">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Grid.ColumnSpan="2" >
                                    <Border Background="#FF4D4D4D" Margin="10" VerticalAlignment="Top" Grid.Row="0" Height="30">
                                        <TextBlock x:Name="RenderPresetTextBlock" Text="Render Preset" FontSize="20" FontWeight="Bold" Foreground="#FFD0D0D0" FontFamily="FiraSansBold" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <Grid Margin="10,40,10,0" Background="#7F000000">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <ComboBox Name="PresetComboBox" Grid.Column="0" FontFamily="Nunito" FontSize="14"  Background="#FF333333" Foreground="White" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10,0,10,0" >
                                            <ComboBoxItem Content="Source"/>
                                            <ComboBoxItem Content="1920x1080 • H.265 • 30fps • CRF 20 • Stereo"/>
                                            <ComboBoxItem Content="1080p, H264 codec"/>
                                            <ComboBoxItem Content="720p H265 codec"/>
                                            <ComboBoxItem Content="720p H264 codec"/>
                                        </ComboBox>
                                        <Button x:Name="PresetEditButton" Grid.Column="1" Background="#FF555555" Foreground="White" FontFamily="Nunito" HorizontalAlignment="Stretch" Margin="10,0,10,0" Click="PresetConfigureButton_Click">
                                            <Grid Width="Auto">
                                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xef58;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                                <TextBlock x:Name="PresetEditTextBlock" Text="Edit Preset" FontFamily="PTSansBold" FontSize="14" HorizontalAlignment="Center" Margin="20,0,0,0" TextAlignment="Center"/>
                                            </Grid>
                                        </Button>
                                        <Border Grid.ColumnSpan="2" BorderBrush="#FF878787" BorderThickness="0,0,0,2"/>

                                    </Grid>                                    
                                </Grid>


                                <Grid Grid.Row="1" Grid.Column="0">
                                    <Border Background="#FF4D4D4D" Margin="10" VerticalAlignment="Top" Grid.Row="0" Height="30">
                                        <TextBlock x:Name="LogoProjectSettingsTextBlock" Text="Logo" FontSize="20" FontWeight="Bold" Foreground="#FFD0D0D0" FontFamily="FiraSansBold" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <Grid Margin="10,40,10,10" Background="#7F000000">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Orientation="Vertical" Grid.Column="0" Margin="5">
                                            <Label x:Name="LogoOrientationLabel" Content="Orientation" FontWeight="Bold" Foreground="White" FontFamily="PTSansBold" Margin="0,0,0,0" HorizontalAlignment="Center" />
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                                                <ToggleButton x:Name="LeftTopBtn" BorderThickness="1" Background="#FF333333" Foreground="White" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" BorderBrush="#FF1A1A1A">
                                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xe742;" FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Left" Width="11" Height="11" />
                                                </ToggleButton>

                                                <ToggleButton x:Name="RightTopBtn" BorderThickness="1" Background="#FF333333" Foreground="White" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" BorderBrush="#FF1A1A1A" >
                                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xe742;" FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Center" Height="11" RenderTransformOrigin="0.5,0.5" Width="11" >
                                                        <TextBlock.RenderTransform>
                                                            <TransformGroup>
                                                                <ScaleTransform ScaleX="-1"/>
                                                                <SkewTransform/>
                                                                <RotateTransform/>
                                                                <TranslateTransform/>
                                                            </TransformGroup>
                                                        </TextBlock.RenderTransform>

                                                    </TextBlock>
                                                </ToggleButton>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                                                <ToggleButton x:Name="LeftBottomBtn" BorderThickness="1" Background="#FF333333" Foreground="White" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" FontSize="10" BorderBrush="#FF1A1A1A">
                                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xe742;" FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Center" Height="11" RenderTransformOrigin="0.5,0.5" Width="11" >
                                                        <TextBlock.RenderTransform>
                                                            <TransformGroup>
                                                                <ScaleTransform ScaleX="-1"/>
                                                                <SkewTransform/>
                                                                <RotateTransform Angle="-180"/>
                                                                <TranslateTransform/>
                                                            </TransformGroup>
                                                        </TextBlock.RenderTransform>
                                                    </TextBlock>
                                                </ToggleButton>
                                                <ToggleButton x:Name="RightBottomBtn" BorderThickness="1" Background="#FF333333" Foreground="White" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" FontSize="10" BorderBrush="#FF1A1A1A">
                                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xe742;" FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Left" Height="11" RenderTransformOrigin="0.5,0.5" Width="11" >
                                                        <TextBlock.RenderTransform>
                                                            <TransformGroup>
                                                                <ScaleTransform ScaleX="1"/>
                                                                <SkewTransform/>
                                                                <RotateTransform Angle="-180"/>
                                                                <TranslateTransform/>
                                                            </TransformGroup>
                                                        </TextBlock.RenderTransform>
                                                    </TextBlock>
                                                </ToggleButton>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="5">
                                            <Label x:Name="LogoTransparencyLabel" Content="Transparency" FontWeight="Bold" Foreground="White" FontFamily="PTSansBold" Margin="0,0,0,0" HorizontalAlignment="Center" />
                                            <TextBox Name="LogoTransparencyTextBox" Text="100%" Margin="0,10,0,0" Background="#FF333333" Foreground="White" FontFamily="Nunito" FontSize="14" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Vertical" Grid.Column="2" Margin="5,5,10,5">
                                            <Label x:Name="LogoManualSettingsLabel" Content="Manual settings" FontWeight="Bold" Foreground="White" FontFamily="PTSansBold" Margin="0,0,0,0" HorizontalAlignment="Center" />
                                            <ToggleButton x:Name="LogoSetManualToggleButton" Margin="0,10,0,0" Background="#FF555555" Foreground="White" FontFamily="Nunito" FontSize="14" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Checked="LogoSetManualToggleButton_Checked">
                                                <Grid Width="Auto">
                                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xe7c5;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                                    <TextBlock x:Name="SetManualTextBlock" Text="Set Manual" FontSize="13" FontFamily="PTSansBold" HorizontalAlignment="Center" Margin="20,0,0,0" TextAlignment="Center"/>
                                                </Grid>
                                            </ToggleButton>
                                        </StackPanel>
                                        <Border Grid.ColumnSpan="3" BorderBrush="#FF878787" BorderThickness="0,0,0,2"/>
                                    </Grid>
                                </Grid>


                                <Grid Grid.Row="1" Grid.Column="1" >
                                    <Border Background="#FF4D4D4D" Grid.ColumnSpan="2" Margin="10" VerticalAlignment="Top" Grid.Row="0" Height="30">
                                        <TextBlock Text="Additional" FontSize="20" FontWeight="Bold" Foreground="#FFD0D0D0" FontFamily="FiraSansBold" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>

                                    <Grid Margin="10,40,10,10" Background="#7F000000">
                                        <StackPanel  Orientation="Vertical">
                                            <CheckBox x:Name="ExportToSourceFolderCheckBox" Content="Export To Source Folder" FontWeight="Light" Foreground="White" FontFamily="PTSansRegular" Margin="10,10,0,0" HorizontalAlignment="Left" BorderBrush="{x:Null}" Background="White"/>
                                            <CheckBox x:Name="OpenFolderAfterExportCheckBox" Content="Open Folder After Export" FontWeight="Light" Foreground="White" FontFamily="PTSansRegular" Margin="10,0,0,0" HorizontalAlignment="Left" BorderBrush="{x:Null}" Background="White"/>
                                        </StackPanel>
                                        <Border  BorderBrush="#FF878787" BorderThickness="0,0,0,2"/>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                    <Border  BorderBrush="#FFD0D0D0" BorderThickness="0,0,0,2"/>

                </Grid>

                <Grid Grid.Row="2">
                    <Border Background="#FF4D4D4D" VerticalAlignment="Top" Grid.Row="0" Height="32">
                        <TextBlock x:Name="ProcessingTextBlock" Text="Processing" FontSize="24" FontWeight="Bold" Foreground="#FFD0D0D0" FontFamily="FiraSansBold" Margin="0,0,0,0" HorizontalAlignment="Center" />
                    </Border>
                    <Grid Margin="0,30,0,0" Background="#FF333333">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="AddToQueueButton" Background="#FF555555" Foreground="White" FontFamily="Nunito Black" HorizontalAlignment="Left" BorderBrush="{x:Null}" Margin="10,0,0,0">
                            <Grid Width="Auto">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xe710;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                <TextBlock x:Name="AddToQueueTextBlock" FontFamily="Nunito Black" Text="Add Project to Queue" FontSize="14" HorizontalAlignment="Center" Margin="20,0,0,0" TextAlignment="Center"/>
                            </Grid>
                        </Button>

                        <Label x:Name="ItemsInQueueLabel" Grid.ColumnSpan="2" Content="Items in queue: 0" FontWeight="Bold" Foreground="White" FontFamily="PTSansBold" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <Grid Grid.Column="1" VerticalAlignment="Center" Margin="0,0,0,0">
                            <Button x:Name="SeeQueueListButton" Background="#FF555555" Foreground="White" FontFamily="Nunito Black" HorizontalAlignment="Right" BorderBrush="{x:Null}" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0" Click="SeeQueueListButton_Click">
                                <Grid Width="Auto">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8FD;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                    <TextBlock x:Name="SeeQueueListTextBlock" FontFamily="Nunito Black" Text="See Queue List" FontSize="14" HorizontalAlignment="Center" Margin="20,0,0,0" TextAlignment="Center"/>
                                </Grid>
                            </Button>
                        </Grid>
                    </Grid>
                    <Border  BorderBrush="#FFD0D0D0" BorderThickness="0,0,0,2"/>

                </Grid>

                <Grid Grid.Row="3">
                    <Button x:Name="StartButton" Background="#FF107C10" Width="200" FontFamily="Nunito Black" Foreground="White" HorizontalAlignment="Center" BorderBrush="{x:Null}" Margin="0,0,10,0" VerticalAlignment="Center" HorizontalContentAlignment="Center" Padding="0,0,0,0">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEDB5;" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Left" />
                            <TextBlock x:Name="StartTextBlock" FontFamily="Nunito Black" Text="Start" FontSize="28" HorizontalAlignment="Center" Margin="30,0,0,0" TextAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Button>
                </Grid>
            </Grid>

        </Grid>

    </Grid>
</Window>
