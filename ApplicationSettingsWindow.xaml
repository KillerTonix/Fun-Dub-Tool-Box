<Window x:Class="Fun_Dub_Tool_Box.ApplicationSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fun_Dub_Tool_Box"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:controls="clr-namespace:ModernWpf.Controls;assembly=ModernWpf.Controls"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        Title="Application Settings"
        Height="560"
        Width="840">
    <Window.Resources>
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
        <Style x:Key="SectionSubTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </Window.Resources>

    <Grid Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Margin="32,28,32,16">
            <TextBlock Text="Application Settings"
                       FontSize="34"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap" />
            <TextBlock Text="Configure language, theme, queue, and output preferences for Fun Dub Tool Box."
                       Margin="0,6,0,0"
                       FontSize="14"
                       Foreground="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}"
                       TextWrapping="Wrap" />
        </StackPanel>

        <Border Grid.Row="1"
                Margin="32,0,32,16"
                Background="{DynamicResource SystemControlBackgroundChromeMediumHighBrush}"
                CornerRadius="12">
            <controls:SimpleStackPanel Spacing="16" Padding="24">
                <controls:SimpleStackPanel>
                    <TextBlock Text="Language" Style="{StaticResource SectionTitle}" />
                    <TextBlock Text="Choose the display language for the interface." Style="{StaticResource SectionSubTitle}" />
                    <ComboBox x:Name="LanguageComboBox"
                              Width="200"
                              SelectedIndex="0">
                        <ComboBoxItem Content="English" />
                        <ComboBoxItem Content="Русский" />
                    </ComboBox>
                </controls:SimpleStackPanel>

                <Separator />

                <controls:SimpleStackPanel>
                    <TextBlock Text="Theme" Style="{StaticResource SectionTitle}" />
                    <TextBlock Text="Switch between light and dark modes." Style="{StaticResource SectionSubTitle}" />
                    <ComboBox x:Name="ThemeComboBox"
                              Width="200"
                              SelectedIndex="0">
                        <ComboBoxItem Content="Light" />
                        <ComboBoxItem Content="Dark" />
                    </ComboBox>
                </controls:SimpleStackPanel>
            </controls:SimpleStackPanel>
        </Border>

        <Border Grid.Row="2"
                Margin="32,0,32,16"
                Background="{DynamicResource SystemControlBackgroundChromeMediumHighBrush}"
                CornerRadius="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <controls:SimpleStackPanel Spacing="20" Padding="24">
                    <controls:SimpleStackPanel>
                        <TextBlock Text="Queue"
                                   Style="{StaticResource SectionTitle}" />
                        <TextBlock Text="Adjust how the processing queue behaves." Style="{StaticResource SectionSubTitle}" />
                        <CheckBox x:Name="StartQueueAutomaticallyCheckBox"
                                  Margin="0,12,0,0"
                                  Content="Start queue automatically when idle for"
                                  Checked="StartQueueAutomaticallyCheckBox_Checked"
                                  Unchecked="StartQueueAutomaticallyCheckBox_Unchecked" />
                        <StackPanel Orientation="Horizontal"
                                    Margin="28,8,0,0"
                                    VerticalAlignment="Center">
                            <ComboBox x:Name="IdleDelayMinutesComboBox"
                                      Width="120"
                                      HorizontalAlignment="Left"
                                      SelectedIndex="1">
                                <ComboBoxItem Content="1 minute" />
                                <ComboBoxItem Content="5 minutes" />
                                <ComboBoxItem Content="10 minutes" />
                                <ComboBoxItem Content="15 minutes" />
                                <ComboBoxItem Content="30 minutes" />
                            </ComboBox>
                            <TextBlock Text="of inactivity"
                                       Margin="12,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}" />
                        </StackPanel>
                        <CheckBox Content="Preview while encoding"
                                  Margin="0,12,0,0" />
                        <CheckBox Content="Play chime when encoding is finished"
                                  Margin="0,6,0,0" />
                        <CheckBox Content="Remove queue list after closing the app"
                                  Margin="0,6,0,0" />
                    </controls:SimpleStackPanel>

                    <Separator />

                    <controls:SimpleStackPanel>
                        <TextBlock Text="Output"
                                   Style="{StaticResource SectionTitle}" />
                        <TextBlock Text="Manage what happens to your files after encoding." Style="{StaticResource SectionSubTitle}" />
                        <CheckBox Content="Open output folder(s) after finishing encode"
                                  Margin="0,12,0,0" />
                    </controls:SimpleStackPanel>
                </controls:SimpleStackPanel>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="32,0,32,24"
                    Spacing="12">
            <Button Width="120"
                    Content="Cancel"
                    IsCancel="True" />
            <Button Width="140"
                    Content="Save"
                    Style="{StaticResource AccentButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
