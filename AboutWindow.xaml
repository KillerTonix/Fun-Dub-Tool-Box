<Window x:Class="Fun_Dub_Tool_Box.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:controls="clr-namespace:ModernWpf.Controls;assembly=ModernWpf.Controls"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        Title="About Fun Dub Tool Box"
        Height="580"
        Width="900">
    <Grid Background="#FF1F1F1F" Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Fun Dub Tool Box"
                       FontFamily="FiraSansBold"
                       FontSize="48"
                       Foreground="#FFF4F4F4" />
            <TextBlock Text="A streamlined toolkit for preparing dubbed video releases with curated materials, presets, and automation."
                       Margin="0,8,0,0"
                       FontFamily="PTSansRegular"
                       FontSize="18"
                       Foreground="#FFC4C4C4"
                       TextWrapping="Wrap" />
        </StackPanel>

        <Grid Grid.Row="1"
              Margin="0,30,0,28"
              ColumnSpacing="28">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Program Overview"
                           FontFamily="FiraSansBold"
                           FontSize="26"
                           Foreground="#FFD0D0D0" />
                <TextBlock Text="Crafted to support fan-dubbing workflows, the tool keeps all required assets—intros, main footage, logos, subtitles, alternate audio tracks, and outros—organized in one timeline-aware workspace."
                           Margin="0,10,0,0"
                           FontFamily="PTSansRegular"
                           FontSize="16"
                           Foreground="#FFC4C4C4"
                           TextWrapping="Wrap" />

                <Border Margin="0,24,0,0"
                        Padding="18"
                        Background="#FF2A2A2A"
                        CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="Highlights"
                                   FontFamily="FiraSansBold"
                                   FontSize="20"
                                   Foreground="#FFDADADA" />
                        <StackPanel Margin="0,12,0,0"
                                    Orientation="Vertical">
                            <TextBlock Text="• Interactive material toggles with presets for each stage of the release pipeline."
                                       Margin="0,0,0,8"
                                       FontFamily="PTSansRegular"
                                       FontSize="15"
                                       Foreground="#FFC4C4C4"
                                       TextWrapping="Wrap" />
                            <TextBlock Text="• Automated rendering queue with real-time progress tracking and GPU-aware optimizations."
                                       Margin="0,0,0,8"
                                       FontFamily="PTSansRegular"
                                       FontSize="15"
                                       Foreground="#FFC4C4C4"
                                       TextWrapping="Wrap" />
                            <TextBlock Text="• Built-in tools for positioning overlays, managing subtitles, and preserving frequently used configurations."
                                       FontFamily="PTSansRegular"
                                       FontSize="15"
                                       Foreground="#FFC4C4C4"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <Border Grid.Column="1"
                    Padding="18"
                    Background="#FF2A2A2A"
                    CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Author"
                               FontFamily="FiraSansBold"
                               FontSize="22"
                               Foreground="#FFDADADA" />
                    <TextBlock Text="Artur"
                               Margin="0,8,0,0"
                               FontFamily="PTSansRegular"
                               FontSize="18"
                               Foreground="#FFE8E8E8" />

                    <TextBlock Margin="0,12,0,0"
                               FontFamily="PTSansRegular"
                               FontSize="15"
                               Foreground="#FFC4C4C4"
                               TextWrapping="Wrap">
                        <Run Text="GitHub: " />
                        <Hyperlink NavigateUri="https://github.com/FunDubToolBox"
                                   Foreground="#FF8CC1FF"
                                   RequestNavigate="Hyperlink_RequestNavigate">github.com/FunDubToolBox</Hyperlink>
                    </TextBlock>

                    <TextBlock Margin="0,6,0,0"
                               FontFamily="PTSansRegular"
                               FontSize="15"
                               Foreground="#FFC4C4C4"
                               TextWrapping="Wrap">
                        <Run Text="Email: " />
                        <Hyperlink NavigateUri="mailto:contact@fundubtoolbox.dev"
                                   Foreground="#FF8CC1FF"
                                   RequestNavigate="Hyperlink_RequestNavigate">contact@fundubtoolbox.dev</Hyperlink>
                    </TextBlock>

                    <TextBlock Margin="0,24,0,0"
                               FontFamily="FiraSansBold"
                               FontSize="20"
                               Foreground="#FFDADADA">Version</TextBlock>
                    <TextBlock x:Name="VersionTextBlock"
                               Margin="0,8,0,0"
                               FontFamily="PTSansRegular"
                               FontSize="16"
                               Foreground="#FFE8E8E8" />
                    <TextBlock x:Name="LastUpdatedTextBlock"
                               Margin="0,4,0,0"
                               FontFamily="PTSansRegular"
                               FontSize="14"
                               Foreground="#FFA6A6A6" />
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2"
                Background="#FF232323"
                CornerRadius="10"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="Change Log"
                           FontFamily="FiraSansBold"
                           FontSize="26"
                           Foreground="#FFDADADA" />

                <ScrollViewer Grid.Row="1"
                              Margin="0,18,0,0"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ChangeLogEntries}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"
                                            Margin="0"
                                            IsItemsHost="True"
                                            />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,16"
                                        Padding="16"
                                        Background="#FF2F2F2F"
                                        CornerRadius="8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Version}"
                                                   FontFamily="FiraSansBold"
                                                   FontSize="18"
                                                   Foreground="#FFECECEC" />
                                        <TextBlock Text="{Binding Date}"
                                                   Margin="0,4,0,0"
                                                   FontFamily="PTSansRegular"
                                                   FontSize="14"
                                                   Foreground="#FFA9A9A9" />
                                        <TextBlock Text="{Binding Summary}"
                                                   Margin="0,10,0,0"
                                                   FontFamily="PTSansRegular"
                                                   FontSize="15"
                                                   Foreground="#FFD0D0D0"
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
